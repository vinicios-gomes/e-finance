{
  "name": "nextjs-boilerplate",
  "description": "A structure ready to use nextjs boilerplate with typescript, react, Jest, React Testing Library, Mirage, and more",
  "version": "1.0.0",
  "author": "Vinicios Gomes<viniciusgomesviana@gmail.com>",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "prettier:fix": "prettier --write --config .prettierrc {src}/**/*.{ts,tsx}",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:unit": "npm test:watch -- -c jest.config.js",
    "cypress": "cypress open",
    "cypress:headless": "cypress run --record false"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@next/bundle-analyzer": "^12.1.5",
    "axios": "^0.26.1",
    "babel-plugin-import": "^1.13.5",
    "framer-motion": "^6.3.1",
    "next": "12.1.5",
    "next-compose-plugins": "^2.2.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-icons": "^4.3.1",
    "react-query": "^3.38.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.6",
    "@types/react-dom": "18.0.2",
    "@types/testing-library__react": "^10.2.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-preset-react-app": "^10.0.1",
    "cypress": "^9.5.4",
    "eslint": "^8.14.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "miragejs": "^0.1.43",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "license": "ISC"
}
